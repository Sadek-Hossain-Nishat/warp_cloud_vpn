    <style name="ModalBottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        
        <item name="backgroundTint">@color/purple_200</item>





        <item name="behavior_fitToContents">false</item>
        <item name="behavior_expandedOffset">392dp</item>













        <item name="behavior_peekHeight">100dp</item>

        



