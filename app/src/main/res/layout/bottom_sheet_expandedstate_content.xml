<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/expandedstate"
    android:animateLayoutChanges="true">
    <TextView
        android:id="@+id/expanded_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textSize="25sp"
        android:textFontWeight="700"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"


        android:text="@string/bottomsheet_expandedtext_title"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:scaleY="1.5"

        android:layout_height="wrap_content"
        android:layout_below="@id/expanded_content"
        android:layout_marginTop="15dp"
        android:text="@string/zerobuttontext"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/materialBlue"/>



</RelativeLayout>